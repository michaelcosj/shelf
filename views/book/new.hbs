<div class="container">
    <div class="row section center">
      <form action="/shelf/newbook/{{shelfId}}" class="col s12" method="POST" enctype="multipart/form-data">
        <div class="row">
          <div class="input-field col s4">
            <input id="title" type="text" class="validate" name="title">
            <label for="title">Title</label>
          </div>
          <div class="input-field col s6">
            <input id="authors" type="text" class="validate" name="authors">
            <label for="authors">Authors</label>
          </div>
          <div class="input-field col s2">
            <input id="edition" type="text" class="validate" name="edition">
            <label for="edition">Edition</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea id="description" class="materialize-textarea" name="description"></textarea>
            <label for="description">Description</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input id="isbn" type="text" class="validate" name="isbn">
            <label for="isbn">ISBN</label>
          </div>
          <div class="input-field col s6">
            <input id="publishedDate" type="date" class="validate" name="publishedDate">
            <label for="publishedDate" hidden>Date Published</label>
          </div>
